<resources>

    <!-- TODO remove old styles after removing old UI -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_slate_blue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.InfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.WalletAddressInput"
        parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.WalletAddressInput.HintAppearance</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="colorAccent">@color/dark_slate_blue</item>
        <item name="colorControlNormal">@color/dark_slate_blue</item>
        <item name="colorControlActivated">@color/dark_slate_blue</item>
    </style>

    <style name="AppTheme.WalletAddressInput.HintAppearance"
        parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/sky</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- end of old styles -->

    <style name="JobReportLinearChartLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.13</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="JobReportSectionLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:textColor">@color/sky</item>
    </style>

    <style name="JobReportTypeButton">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="JobReportTypeButtonActive" parent="JobReportTypeButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/exo_bold</item>
    </style>

    <style name="JobReportTypeButtonInactive" parent="JobReportTypeButton">
        <item name="android:textColor">@color/light_teal</item>
        <item name="android:fontFamily">@font/exo_medium</item>
    </style>

    <style name="JobReportLinearChartValue">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="light_teal">#79c6e1</color>
</resources>
