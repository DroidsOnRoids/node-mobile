<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_slate_blue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.InfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.WalletAddressInput"
        parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.WalletAddressInput.HintAppearance</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="colorAccent">@color/dark_slate_blue</item>
        <item name="colorControlNormal">@color/dark_slate_blue</item>
        <item name="colorControlActivated">@color/dark_slate_blue</item>
    </style>

    <style name="AppTheme.WalletAddressInput.HintAppearance"
        parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/sky</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
