<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/globe_background"
    android:padding="@dimen/screen_root_layout_padding">

    <TextView
        android:id="@+id/subnetAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@color/tealish"
        android:fontFamily="@font/exo_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="0.11"
        android:lineSpacingExtra="7sp"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp"
        android:text="@string/subnet_address"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/subnetAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        tools:text="255.255.255.255/0"
        android:lines="1"
        android:id="@+id/subnetAddress"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/exo_demi_bold"
        android:gravity="center"
        android:letterSpacing="0.06"
        android:text="@string/n_a"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="44sp"
        app:autoSizeMinTextSize="22sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_marginBottom="24dp"
        android:background="@color/tealish"
        app:layout_constraintBottom_toTopOf="@+id/nodeIdTextView"
        app:layout_constraintEnd_toEndOf="@+id/nodeIdTextView"
        app:layout_constraintStart_toStartOf="@+id/nodeIdTextView" />

    <ImageView
        android:id="@+id/connectionStatusDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="@+id/nodeIdTextView"
        app:layout_constraintEnd_toStartOf="@+id/nodeIdTextView"
        app:layout_constraintTop_toTopOf="@+id/nodeIdTextView"
        tools:ignore="ContentDescription"
        tools:tint="@color/coral_pink" />

    <TextView
        android:id="@+id/nodeIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/exo_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="0.14"
        android:lineSpacingExtra="16sp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NODE ID: 1234" />

    <include
        android:id="@+id/dashboardDetails"
        layout="@layout/dashboard_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nodeIdTextView" />

    <include
        layout="@layout/job_report_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>