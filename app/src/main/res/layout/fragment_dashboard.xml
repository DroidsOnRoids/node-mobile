<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.OldMainActivity">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="centerInside"
            android:src="@drawable/path_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/link_button_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/start_button_text"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/infoLinearLayout"
            app:layout_constraintEnd_toStartOf="@+id/stopButton"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginEnd="8dp" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/link_button_background"
            android:enabled="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/stop_button_text"
            app:layout_constraintBottom_toTopOf="@id/infoLinearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/startButton"
            app:layout_goneMarginEnd="8dp" />

        <LinearLayout
            android:id="@+id/infoLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/jobsCounterTextView"
                style="@style/AppTheme.InfoTextView"
                android:fontFamily="@font/proxima_nova_regular"
                android:gravity="center_horizontal"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="10sp"
                android:text="@string/wallet_address_info"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Jobs completed: 0" />

            <TextView
                android:id="@+id/statusTextView"
                style="@style/AppTheme.InfoTextView"
                android:fontFamily="@font/proxima_nova_regular"
                android:gravity="center_horizontal"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="10sp"
                android:text="@string/wallet_address_info"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Status: connected" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>